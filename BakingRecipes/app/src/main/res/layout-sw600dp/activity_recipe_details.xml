<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/two_pane_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/master_list_fragment"
        android:name="kouts.nasia.aueb.gr.bakingrecipes.Fragments.MasterRecipeStepsFragment"
        android:layout_width="400dp"
        android:layout_height="match_parent" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:paddingRight="@dimen/vertical_margin_small" />

    <FrameLayout
        android:id="@+id/step_details_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside" />
</LinearLayout>